# シェルスクリプトは常にLFを使用
*.sh text eol=lf

# PowerShellスクリプトは常にCRLFを使用
*.ps1 text eol=crlf

# その他のテキストファイル
*.txt text eol=lf
*.md text eol=lf
*.yml text eol=lf
*.yaml text eol=lf
*.json text eol=lf
*.py text eol=lf
*.js text eol=lf
*.ts text eol=lf
*.html text eol=lf
*.css text eol=lf
*.xml text eol=lf

# バイナリファイル
*.png binary
